<p id="notice"><%= notice %></p>

<h1>Product Attachments</h1>

<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>Product</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_attachments.each do |product_attachment| %>
      <tr>
        <td><%= product_attachment.product_id %></td>
        <td><%= product_attachment.photo %></td>
        <td><%= link_to 'Show', product_attachment , class: 'btn btn-outline-info'%></td>
        <td><%= link_to 'Edit', edit_product_attachment_path(product_attachment),class: 'btn btn-outline-warning' %></td>
        <td><%= link_to 'Destroy', product_attachment, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product Attachment', new_product_attachment_path,class: 'btn btn-outline-primary' %>
