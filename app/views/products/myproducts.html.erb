<div class="mt-4">
<%= link_to 'New Product', new_product_path, class: 'btn btn-primary float-end' %>
<h1 class="mb-4 mt-4">My Products :</h1>

<p id="notice"><%= notice %></p>
<% if @myProducts.size == 0 %>
  <h2>YOU DON'T HAVE ANY PRODUCTS YET</h2>
<% else %>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col" class="p-3">ID</th>
      <th scope="col" class="p-3">Name</th>
      <th scope="col" class="p-3">Quantity</th>
      <th scope="col" class="p-3">Currentprice</th>
      <th scope="col" class="p-3">Description</th>
      <th scope="col" class="p-3"></th>
    </tr>
  </thead>

  <tbody>
    <% @myProducts.each do |product| %>
      <tr>
        <th scope="row" class="p-3"><%= product.id %></th>
        <td class="p-3"><%= product.name %></td>
        <td class="p-3"><%= product.quantity %></td>
        <td class="p-3"><%= product.currentPrice %></td>
        <td class="p-3"><%= product.description %></td>
        <td class="p-3"><%= link_to 'Show', product, class: 'btn btn-info' %>
        <%= link_to 'Edit', edit_product_path(product) , class: 'btn btn-primary' %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% end %>

<br>

</div>