<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>
  </div>

  <div class="field">
    <%= form.label :currentPrice %>
    <%= form.text_field :currentPrice %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

<div class="field">
<%= form.label :Brand %>
  <%= form.collection_select :brand_id, Brand.all, :id, :name, include_blank: true %>
  </div>

  <div class="field">
  <%= form.label :Category %>
  <%= form.collection_select :category_id, Category.all, :id, :name, include_blank: true %>
  </div>


    <%= form.fields_for :product_attachments do |p| %>
         <div class="field">
           <%= p.label :photos %><br>
           <%= p.file_field :photos, :multiple => true, name:     "product_attachments[photos][]" %>
         </div>
       <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
