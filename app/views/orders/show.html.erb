







<p id="notice"><%= notice %></p>

<h1>Order Details</h1>
<p>
  <strong>Order State:</strong>
  <%= @order.state %>
</p>
<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>id </th>
      <th>name </th>
      <th>state  </th>
    
    </tr>
  </thead>

  <tbody>
    <% @order.OrderItems.each do |item| p = Product.find_by(id:item.product_id) %>
      <tr>
        <td><%= item.id %></td>
        <td><%= p.name %></td>
        <td><%= item.state%></td>
      
      </tr>
    <% end %>
  </tbody>
</table>

<br>



