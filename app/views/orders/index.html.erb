<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>State</th>
      <th>Buyer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.state %></td>
        <td><%= order.buyer_id %></td>
        <td><%= link_to 'Show', order, class: 'btn btn-outline-info' %></td>
        <td><%= link_to 'Edit', edit_order_path(order),class: 'btn btn-outline-warning' %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path , class: 'btn btn-outline-primary' %>
