<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>State</th>
      <th>Buyer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.state %></td>
        <td><%= order.buyer_id %></td>
        <td><%= link_to 'Show', order %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path , class: 'btn btn-outline-primary' %>
