<p id="notice"><%= notice %></p>
<%= link_to 'New Store', new_store_path ,class: 'btn btn-outline-success float-end m-1' %>
<h1>Stores</h1>

<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Summary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.summary %></td>
        <td><%= link_to 'Show', store , class: 'btn btn-outline-info' %></td>
        <td ><%= link_to 'Edit', edit_store_path(store),class: 'btn btn-outline-warning' %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


