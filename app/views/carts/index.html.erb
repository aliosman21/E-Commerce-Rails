<p id="notice"><%= notice %></p>

<h1>Carts</h1>

<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>Buyer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.buyer_id %></td>
        <td><%= link_to 'Show', cart , class: 'btn btn-outline-info' %></td>
        <td><%= link_to 'Edit', edit_cart_path(cart),class: 'btn btn-outline-warning'  %></td>
        <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-outline-danger'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cart', new_cart_path %>
