<p id="notice"><%= notice %></p>

<%= link_to 'New Brand', new_brand_path ,class: 'btn btn-outline-success float-end m-1' %>
<h1>Brands</h1>

<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td><%= link_to 'Show', brand , class: 'btn btn-outline-info' %>
        <%= link_to 'Edit', edit_brand_path(brand) ,class: 'btn btn-outline-warning' %>
        <%= link_to 'Destroy', brand, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

